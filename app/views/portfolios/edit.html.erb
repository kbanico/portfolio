<h1>Edit a new Portfolio Item</h1>

<%= form_for(@portfolio_item) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :blog_title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle, id: :portfolio_body %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, id: :portfolio_body %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.text_area :main_image, id: :portfolio_body %>
  </div>

  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.text_area :thumb_image, id: :portfolio_body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

