<h1>Portfolio Items</h1>

<p><%= link_to "Create New Item",  new_portfolio_path %></p>


<% @portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_path(item) %></p>
  <p><%= item.subtitle %></p>
  <%= image_tag(item.thumb_image) unless !item.thumb_image %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to "Delete Portfolio", portfolio_path(item), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
